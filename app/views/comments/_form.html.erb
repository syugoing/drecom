<%= form_for([topic,comment], remote: true) do |f| %>
  <%= f.error_messages! %>
  <%= f.hidden_field :topic_id, value: topic.id %>
  <div class="field">
    <%= f.text_field :content, placeholder: "コメント内容", class: "form-control"  %>
  </div>
  <div class="actions">
    <%= f.submit 'コメントする'%>
  </div>
<% end %>
