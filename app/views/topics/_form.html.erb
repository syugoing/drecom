<%= form_for(@topic) do |f| %>
  <%= f.error_messages! %>

  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <div class="radio_button">
    <%= f.radio_button :share, 0 %>公開
    <%= f.radio_button :share, 1 %>友達のみ公開
    <%= f.radio_button :share, 2 %>非公開
  </div>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>
