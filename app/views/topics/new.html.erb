<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <h2>新しい目標を作成する</h2>

    <%= form_for(@topic) do |f| %>
      <%= f.error_messages! %>
      <p>タイトル</p>
      <%= f.text_field :title, class: 'form-control' %><br>
      <p>目標</p>
      <%= f.text_field :content, class: 'form-control' %><br>
      <div class="row">
        <div class="col-xs-4 col-xs-offset-2">
          <p>ジャンル
            <%= f.select :genre, [["無選別", "1"], ["やりたいこと", "2"], ["勉強", "3"], ["趣味", "4"],
                                  ["恋愛", "5"], ["就活", "6"], ["筋トレ", "7"], ["仕事", "8"], ["その他", "9"] ], {selected: "1"}, options ={ size: 9 } %>
          </p>
        </div>
        <div class="col-xs-4"><br>
          <div class="radio_button">
            <div><%= f.radio_button :share, 0 %>公開　　　　</div>
            <div><%= f.radio_button :share, 1 %>友達のみ公開</div>
            <div><%= f.radio_button :share, 2 %>非公開　　　</div>
          </div>
        </div>
        <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

  </div>
</div>
